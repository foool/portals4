<?xml version="1.0"?>
<test>
  <subtest>
    <desc>Test detection of EQ overflow at initiator</desc>
    <ptl>
	  <ptl_ni>
	  <ompi_rt>
      <ptl_ni ni_opt="MATCH LOGICAL">
        <ptl_eq eq_count="4">
          <ptl_pt>
            <ptl_get_id/>
            
            <if rank="0">
	       <repeat count="3">
                 <ptl_md md_data="0xaa">
                 <barrier/>
                  <ptl_put ack_req="ACK" length="4" match="0x5555" target_id="1"/>
                  <barrier/> 
                </ptl_md>
              </repeat>
          
              <ptl_eq_wait ret="EQ_DROPPED"/>
              <ptl_eq_wait ret="OK"/>
            </if>
            
            <if rank="1">
              <repeat count="3">
                <ptl_me me_opt="OP_PUT" me_match="0x5555" me_data="0x77">
                <barrier/>
               
                  <ptl_eq_wait>
                    <check event_type="PUT"/>
                  </ptl_eq_wait>
		  <barrier/>
                </ptl_me>
              </repeat>
            </if>
          </ptl_pt>
        </ptl_eq>
      </ptl_ni>
	  </ompi_rt>
	  </ptl_ni>
    </ptl>
  </subtest>
  <barrier/>
  <subtest>
    <desc>Test detection of EQ overflow at target</desc>
    <ptl>
	  <ptl_ni>
	  <ompi_rt>
      <ptl_ni ni_opt="MATCH LOGICAL">
        <ptl_eq eq_count="2">
          <ptl_pt>
            <ptl_get_id/>
            
            <if rank="0">
	      <repeat count="3">
                <ptl_md md_data="0xaa">
                  <barrier/>
                  <ptl_put ack_req="ACK" length="4" match="0x5555" target_id="1"/>
                  <ptl_eq_poll time="100">
                      <check event_type="SEND"/>
                  </ptl_eq_poll>
                  <ptl_eq_poll time="100">
                      <check event_type="ACK"/>
                  </ptl_eq_poll>
                  <barrier/>
                </ptl_md>
              </repeat>
            </if>
            
            <if rank="1">
              <repeat count="3">
                <ptl_me me_opt="OP_PUT" me_match="0x5555">
                  <barrier/>

		  <barrier/>
                </ptl_me>
              </repeat>

              <ptl_eq_wait ret="EQ_DROPPED"/>
              <ptl_eq_wait ret="OK"/>
            </if>
          </ptl_pt>
        </ptl_eq>
      </ptl_ni>
	  </ompi_rt>
	  </ptl_ni>
    </ptl>
  </subtest>
</test>

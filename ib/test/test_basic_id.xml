<?xml version="1.0"?>
<test>
  <subtest>
    <desc>Test PtlGetUid without init</desc>
    <ptl_get_uid ret="NO_INIT"/>
  </subtest>
  <subtest>
    <desc>Test PtlGetId without init</desc>
    <ptl_get_id ret="NO_INIT"/>
  </subtest>
  <subtest>
    <desc>Test PtlGetJid without init</desc>
    <ptl_get_jid ret="NO_INIT"/>
  </subtest>
  <subtest>
    <desc>Test PtlGetUid with ni_handle = INVALID</desc>
    <ptl>
      <ptl_get_uid ni_handle="INVALID" ret="ARG_INVALID"/>
    </ptl>
  </subtest>
  <subtest>
    <desc>Test PtlGetId with ni_handle = INVALID</desc>
    <ptl>
      <ptl_get_id ni_handle="INVALID" ret="ARG_INVALID"/>
    </ptl>
  </subtest>
  <subtest>
    <desc>Test PtlGetJid with ni_handle = INVALID</desc>
    <ptl>
      <ptl_get_jid ni_handle="INVALID" ret="ARG_INVALID"/>
    </ptl>
  </subtest>
  <subtest>
    <desc>Test PtlGetUid with good parameters</desc>
    <ptl>
      <ptl_ni>
        <ptl_get_uid/>
      </ptl_ni>
    </ptl>
  </subtest>
  <subtest>
    <desc>Test PtlGetId with good parameters</desc>
    <ptl>
      <ptl_ni>
        <ptl_get_id/>
      </ptl_ni>
    </ptl>
  </subtest>
  <subtest>
    <desc>Test PtlGetJid with good parameters</desc>
    <ptl>
      <ptl_ni>
        <ptl_get_jid/>
      </ptl_ni>
    </ptl>
  </subtest>
</test>

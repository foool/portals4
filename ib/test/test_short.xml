<?xml version="1.0"?>
<test>
  <repeat count="2">
  <subtest>
    <desc>Test short put without offset</desc>
    <ptl>
      <ptl_ni>
	<ptl_pt>
	  <ptl_me me_opt="OP_PUT" me_match="0x5555" me_data="0x77">
          <ptl_md md_data="0xaa">
            <ptl_put length="4" match="0x5555"/>
	    <msleep count="10"/>
          </ptl_md>
	  <check length="4" me_data="0xaa"/>
	  </ptl_me>
	</ptl_pt>
      </ptl_ni>
    </ptl>
  </subtest>
  <subtest>
    <desc>Test short put with offset</desc>
    <ptl>
      <ptl_ni>
	<ptl_pt>
	  <ptl_me me_opt="OP_PUT" me_match="0x5555" me_data="0x77">
          <ptl_md md_data="0xaa">
            <ptl_put length="4" match="0x5555" rem_offset="3"/>
	    <msleep count="10"/>
          </ptl_md>
	  <check length="3" me_data="0x77"/>
	  <check length="4" offset="3" me_data="0xaa"/>
	  </ptl_me>
	</ptl_pt>
      </ptl_ni>
    </ptl>
  </subtest>
  </repeat>
</test>

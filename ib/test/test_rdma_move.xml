		<ptl_eq_poll time="100" eq_handle="[0]" ret="EQ_EMPTY"/>
		<ptl_eq_poll time="100" eq_handle="[1]">
		  <check event_type="REPLY"/>
		  <check event_user_ptr="432"/>
		  <check event_ni_fail="DROPPED"/>
		</ptl_eq_poll>

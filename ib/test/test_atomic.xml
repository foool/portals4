<?xml version="1.0"?>
<test>
  <subtest>
    <desc>Test atomic min/char (1)</desc>
    <ptl>
      <ptl_ni>
	<ptl_pt>
	  <ptl_me me_opt="OP_PUT" me_match="0x5555" me_data="7">
          <ptl_md md_data="9">
            <ptl_atomic atom_op="MIN" atom_type="CHAR" length="4" match="0x5555"/>
	    <msleep count="10"/>
          </ptl_md>
	    <check length="4" type="CHAR" me_data="7"/>
	    <check length="1" type="CHAR" offset="4" me_data="7"/>
	  </ptl_me>
	</ptl_pt>
      </ptl_ni>
    </ptl>
  </subtest>

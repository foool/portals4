<?xml version="1.0"?>
<test>
  <repeat count="2">
    <subtest>
      <desc>Test PtlStartBundle without init</desc>
      <ptl_start_bundle ret="NO_INIT"/>
    </subtest>
    <subtest>
      <desc>Test PtlEndBundle without init</desc>
      <ptl_end_bundle ret="NO_INIT"/>
    </subtest>
    <subtest>
      <desc>Test PtlStartBundle with NI handle = INVALID</desc>
      <ptl>
        <ptl_start_bundle ni_handle="INVALID" ret="ARG_INVALID"/>
      </ptl>
    </subtest>
    <subtest>
      <desc>Test PtlEndBundle with NI handle = INVALID</desc>
      <ptl>
        <ptl_end_bundle ni_handle="INVALID" ret="ARG_INVALID"/>
      </ptl>
    </subtest>
  </repeat>
</test>

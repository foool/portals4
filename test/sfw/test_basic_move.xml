<?xml version="1.0"?>
<test>
  <repeat count="2">
    <subtest>
      <desc>Test PtlPut without init</desc>
      <arg_check>
        <ptl_put ret="NO_INIT"/>
      </arg_check>
    </subtest>
    <subtest>
      <desc>Test PtlGet without init</desc>
      <arg_check>
        <ptl_get ret="NO_INIT"/>
      </arg_check>
    </subtest>
    <subtest>
